<!--components/commentcard/index.wxml-->
<view class="commentcard" style="margin-top:{{margintop}}rpx">
  <view class="user align-center"> 
    <image src="{{headUrl}}" mode="aspectFit"></image> 
    <view class="flex1">
      <view class="flex flex-row justify-between align-end">
        <view class="name flex flex-row align-center text-ellipsis ">{{name}}<image class="" wx:if="{{isvip}}" src="{{vipicon}}" mode="aspectFit"></image></view>
        <view class="title22 grey">{{date}}</view>
      </view>
      <view class="flex flex-row margin10TOP">
        <view class="spacing6 title26">
          <text class="cuIcon-favorfill lg yellow  "></text>
          <text class="cuIcon-favorfill lg yellow"></text>
          <text class="cuIcon-favorfill lg yellow"></text>
          <text class="cuIcon-favorfill lg yellow"></text>
          <text class="cuIcon-favorfill lg yellow"></text> 
        </view>
        <text class="title22 grey vertical-top">满意</text>
      </view>
    </view>
  </view>
  <view class="body title26 line48 black">
    {{comment}}
  </view>
</view>