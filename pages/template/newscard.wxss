/* pages/template/newscard.wxss */
.think-card{
  width: 690rpx;
  border-radius: 8rpx;
  margin-top:30rpx;
  padding:20rpx;
  background: #F9FAFB;
}
.think-card>view:first-child{
  width: 160rpx;
  height: 130rpx;
  border-radius: 8rpx;
  overflow: hidden;
  margin-right: 20rpx;
} 
.think-card>view:first-child image{
  width: 100%;
  height: 100%;
} 
.think-card>view:last-child{
  flex:1;
  height: 130rpx;
  text-overflow:ellipsis;
  overflow: hidden;
}
.think-card>view:last-child>view {
  height: 40rpx; 
}
.think-card .midtag{
  margin: 10rpx 0 15rpx 0;
}