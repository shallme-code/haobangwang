/* pages/tabbar/knowledge/index.wxss */
@import "../../template/newscard.wxss";
@import "../../template/answer/index.wxss";

.navtop {
  width: 100%;
  padding:0 30rpx 30rpx 30rpx;
  background: #FFFFFF;
  box-shadow: 0 1rpx 10rpx 0 rgba(118, 118, 118, 0.14);
  position: fixed;
  z-index: 2;
  top:0;
  left: 0;
}
.navbtn{
  width: 180rpx;
  margin-right: 50rpx; 
  height:60rpx;
  line-height: 60rpx;
}
.navbtn2{
  margin-right: 20rpx;
}
.navtop>scroll-view{
  height: 90rpx; 
  padding-top:30rpx;
  white-space: nowrap;
}
.navtop>scroll-view:nth-child(2){
  border-top: solid 1rpx #F4F6F7;
}